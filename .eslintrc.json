{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "react/prop-types": "error",
    "testing-library/no-await-sync-events": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*", "**/*.test.*"],
      "rules": {
        "testing-library/await-async-queries": "off",
        "testing-library/no-await-sync-events": "off"
      }
    }
  ]
}
